---
const { heading, subparagraph, hows } = Astro.props;
import BtnPrimary from "../BtnPrimary.astro";
---

<section>
  <div class="pt-20 md:pt-0">
    <div
      class="max-w-[1440px] px-5 mx-auto flex gap-14 lg:gap-20 flex-col relative"
    >
      {
        subparagraph && (
          <p class="max-w-none lg:max-w-[50%] text-base lg:text-xl lg:leading-relaxed">
            {subparagraph}
          </p>
        )
      }

      <p
        class="font-light text-2xl leading-relaxed lg:text-4xl lg:leading-relaxed text-brand"
      >
        {heading}
      </p>
      <div class="flex flex-col lg:flex-row justify-between gap-5">
        {
          hows.map((how, index) => (
            <div class="p-2 bg-white border-sky-100 border rounded-xl flex-1">
              <div class="min-h-[240px] h-full flex flex-col justify-between bg-sky-50 border border-sky-200 rounded-lg p-4 ">
                <div>
                  {/* <p class="text-sky-600">0{index + 1}</p> */}
                  <p class="text-sky-600">We will immediately</p>

                  <p class="text-3xl font-light text-brand">{how.name}</p>
                </div>
                <p>{how.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
