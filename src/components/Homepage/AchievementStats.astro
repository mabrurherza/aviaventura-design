---
import { sanityClient } from "sanity:client";
const content = await sanityClient.fetch(`*[_type == "aboutPage"][0]`);
import Eyebrow from "../Eyebrow.astro";
---

<section class="container mx-auto gap-8 py-40 lg:gap-20 lg:py-32">
  <div class="mb-10">
    <Eyebrow text="Aviaventura in numbers" />
  </div>
  <div class="flex flex-col lg:flex-row gap-10">
    <div
      class="flex flex-1 flex-col gap-7 rounded-xl overflow-hidden bg-sky-100 p-6 relative"
    >
      <p class="text-7xl text-sky-600 z-10">{content.statistics.airlines}+</p>
      <p class="text-4xl z-10">
        Airline partnerships with their dedicated offices
      </p>
      <hr />
      <a
        href="/success-stories"
        class="rounded-md bg-white p-4 text-2xl text-sky-600 z-10"
      >
        <button
          class="flex items-end xs:items-center w-full justify-between z-10"
        >
          <p class="text-left">
            See Success Stories on how we handle our strategic partnerships
          </p>
          <div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              stroke-width="2"
              class="size-6 stroke-sky-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
            </svg>
          </div>
        </button>
      </a>

      <img
        src="/graphic/small-blurry-plane.png"
        alt="Cloud image decoration"
        class="absolute top-10 right-10 w-16 z-0"
      />

      <img
        src="/graphic/cloud-transparent.png"
        alt="Cloud image decoration"
        class="absolute bottom-0 left-0 w-full z-0"
      />
    </div>
    <div class="grid flex-1 gap-6 lg:grid-cols-2 lg:grid-rows-2 lg:gap-16">
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">7+</p>
        <p class="text-2xl">Years of experiences</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.events}+</p>
        <p class="text-2xl">Events and seminars hosted</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.passengers}+</p>
        <p class="text-2xl">Passengers served</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.partners}+</p>
        <p class="text-2xl">Travel agency partners</p>
        <hr />
      </div>
    </div>
  </div>
</section>
