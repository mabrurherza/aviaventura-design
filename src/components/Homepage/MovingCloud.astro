---
import Layout from "../../layouts/Layout.astro";
---

<style>
  .moving-cloud {
    position: absolute;
    animation: moveImage 10s alternate-reverse infinite;
    height: 104%;
    top: -4px;
    width: 1400px;
  }

  @keyframes moveImage {
    0% {
      left: -50px;
    }
    100% {
      left: 0;
    }
  }

  @media screen and (max-width: 600px) {
    .moving-cloud {
      animation: none;
      width: 100%;
    }

    .moving-cloud img {
      object-fit: cover;
      height: 100%;
      width: 100%;
    }
  }
</style>

<section>
  <div class="bg-gradient-to-b from-white to-sky-100 pt-32 pb-10 lg:py-56">
    <div class="max-w-[1440px] px-5 mx-auto flex flex-col gap-10 lg:flex-row">
      <div class="flex flex-1 flex-col justify-center gap-10">
        <h1 class="text-display">Title</h1>
        <p class="text-xl leading-relaxed">
          l Lorem ipsum dolor sit amet consectetur adipisicing elit. Fuga vero,
          cupiditate praesentium tempora voluptas dolorem voluptatum eum
          inventore voluptatem tenetur.
        </p>
      </div>
      <div class="relative flex flex-1 items-center justify-center">
        <div
          class="overflow-hidden relative aspect-video w-full md:aspect-[2/3] max-w-[90%] rounded-[32px] md:max-w-[60%] border-[10px] border-white border-opacity-70"
        >
          <div class="moving-cloud">
            <img
              src="/img/CloudLong.jpg"
              alt="Decorative cloud background"
              class="h-full"
            />
          </div>
        </div>
        <img
          src="/img/heroPlane.png"
          alt="Decorative aeroplane image"
          class="absolute w-full"
        />
      </div>
    </div>
  </div>
</section>
