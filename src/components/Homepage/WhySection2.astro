---
const { eyebrow, heading, subparagraph, advantages } = Astro.props;
import Eyebrow from "../Eyebrow.astro";
---

<section class="bg-brand text-white pb-32">
  <div
    class="max-w-[1440px] px-5 mx-auto flex flex-col gap-6 lg:gap-20 lg:flex-row"
  >
    <div class="flex-1 flex flex-col max-w-[600px]">
      <Eyebrow text="DEDICATED TEAM ADVANTAGES" />

      <p class="text-base sm:text-xl">
        {subparagraph}
      </p>
    </div>
    <div class="flex flex-1 flex-col gap-10">
      <ul class="advantages flex flex-col text-xl sm:text-2xl">
        {
          advantages.map((advantage) => (
            <li class="flex gap-2 py-6 md:py-10 border-b border-slate-200 border-opacity-30">
              <img
                src="/img/checklist.svg"
                alt="Checklist"
                class="h-5 sm:h-8"
              />
              {advantage}
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="max-w-[1440px] px-5 mx-auto flex flex-col gap-4 mt-32">
    <h2 class="text-3xl !leading-tight text-white sm:text-4xl xl:text-5xl mb-1">
      Success Stories
    </h2>

    <div>
      <div
        class="p-2 bg-blue-100 bg-opacity-15 border-sky-100 border-opacity-5 border rounded-xl flex-1"
      >
        <div
          class="h-full flex flex-col lg:flex-row justify-between bg-white rounded-lg p-4 lg:p-7 gap-2 group"
        >
          <div class="flex-1">
            <h3 class="text-3xl text-brand">
              Transforming Airline Partnerships into Success Stories
            </h3>
            <p class="text-slate-800 mt-2">
              Discover how AVIAVENTURAâ€™s dedicated teams have successfully
              transformed airline partnerships, driving growth and improving
              operational efficiency. Read our Success Stories to see real-world
              examples of the value we bring to our principals.
            </p>

            <a href="/success-stories">
              <button
                class="mt-10 py-3 px-5 hover:px-7 transition-all border-l-4 border-sky-600 text-sky-600 hover:bg-sky-50 font-medium text-lg"
                >Read Success Stories</button
              >
            </a>
          </div>

          <div class="flex-1 relative flex justify-end">
            <img
              src="/img/event1.png"
              alt=""
              class="w-48 rounded-lg object-cover h-full z-[3] relative"
            />

            <img
              src="/img/event2.png"
              alt=""
              class="w-48 rounded-lg object-cover h-full -ml-32 z-[2] relative group-hover:ml-2 transition-all ease-out duration-500"
            />

            <img
              src="/img/event3.png"
              alt=""
              class="w-48 rounded-lg object-cover h-full -ml-32 z-[1] relative group-hover:ml-2 transition-all ease-out duration-500"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
