---
import Layout from "../layouts/Layout.astro";
import Team from "../components/Team.astro";

import { sanityClient } from "sanity:client";
const content = await sanityClient.fetch(`*[_type == "aboutPage"][0]`);

import { urlForImage } from "../sanity/lib/urlForImage";
import LogoOutlineGraphic from "../components/LogoOutlineGraphic.astro";
---

<Layout>
  <section class="bg-brand py-32">
    <div
      class="container mx-auto p-5 flex flex-col-reverse lg:flex-row gap-20 items-center relative"
    >
      <img
        src="/img/CEO.jpg"
        alt="CEO of Aviaventura, Yusuf Besar Jauhari"
        class="flex-1 w-full md:max-w-[400px] rounded-xl"
      />
      <blockquote class="flex-1">
        <p
          class="font-light text-3xl leading-relaxed lg:text-4xl lg:leading-relaxed text-white max-w-[550px]"
        >
          Each client is unique - we tailor our solutions to fit their specific
          needs and personal values.
        </p>
        <cite class="flex items-center mt-10 text-sky-500"
          >Yusuf Besar Jauhari, CEO</cite
        >
      </blockquote>
    </div>
    <div class="absolute right-0 top-[240px] opacity-20 w-64 md:hidden">
      <LogoOutlineGraphic />
    </div>

    <div class="absolute right-0 bottom-0 opacity-20 hidden md:block">
      <LogoOutlineGraphic />
    </div>
  </section>

  <section
    class="container mx-auto flex flex-col gap-8 pt-40 lg:flex-row lg:gap-20 lg:pt-56"
  >
    <div class="flex-1">
      <h1 class="text-display mb-8 lg:mb-12 lg:max-w-[8ch]">Our Company</h1>
      <p>
        {content.content.paragraph}
      </p>
    </div>
    <div class="flex-1">
      <img
        src={urlForImage(content.content.mainImage).url()}
        alt="Team photo of AVIAVENTURA"
        class="h-72 w-full rounded-2xl object-cover lg:size-auto"
      />
    </div>
  </section>

  <section
    class="container mx-auto flex flex-col gap-8 py-40 lg:flex-row lg:gap-20 lg:py-56"
  >
    <div class="flex flex-1 flex-col gap-7 rounded-lg bg-sky-50 p-6">
      <p class="text-7xl text-sky-600">{content.statistics.airlines}+</p>
      <p class="text-4xl">Airline partnerships with their dedicated offices</p>
      <hr />
      <a
        href="/success-stories"
        class="rounded-md bg-white p-4 text-2xl text-sky-600"
      >
        <button class="inline-flex w-full justify-between">
          <p class="text-left">
            See Success Stories, on how we handle our strategic partnerships
          </p>
          <div>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              stroke-width="2"
              class="size-6 stroke-sky-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"></path>
            </svg>
          </div>
        </button>
      </a>
    </div>
    <div class="grid flex-1 gap-6 lg:grid-cols-2 lg:grid-rows-2 lg:gap-16">
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">7+</p>
        <p class="text-2xl">Years of experiences</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.events}+</p>
        <p class="text-2xl">Events and seminars hosted</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.passengers}+</p>
        <p class="text-2xl">Passengers served</p>
        <hr />
      </div>
      <div class="flex flex-col justify-between gap-6">
        <p class="text-6xl text-sky-600">{content.statistics.partners}+</p>
        <p class="text-2xl">Travel agency partners</p>
        <hr />
      </div>
    </div>
  </section>
</Layout>
