---
import Layout from "../layouts/Layout.astro"
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"
import Newsfeeds from "../components/Newsfeeds.astro"
---

<Layout>
  <Navbar />
  <main class="container mx-auto space-y-5 pt-40 lg:pt-56">
    <h1 class="text-display text-5xl">Newsfeed</h1>
    <p class="lg:w-1/2">Stay informed with the latest updates from AVIAVENTURA. Discover our latest airline partnerships, events, and industry insights, and more.</p>
  </main>
  <section class="container mx-auto py-24 space-y-5">
    <Newsfeeds />
  </section>
  <Footer />
</Layout>
