---
import OtherLayout from "../../layouts/OtherLayout.astro";

import { sanityClient } from "sanity:client";
const policies = await sanityClient.fetch(`*[_type == "policies"]`);
---

<OtherLayout>
  <main class="max-w-screen-lg mx-auto py-28 px-5">
    <h1 class="text-3xl lg:text-5xl font-light text-brand mb-10">
      Company Policy
    </h1>
    <div class="flex flex-col gap-5">
      {
        policies.map((policy) => (
          <a
            href={`/policies/${policy.slug.current}`}
            class="text-lg font-light block hover:bg-slate-100 w-full border-b border-slate-200 pl-0 pr-5 py-5 lg:py-10 hover:pl-5 transition-all"
          >
            {policy.title}
          </a>
        ))
      }
    </div>
  </main>
</OtherLayout>
